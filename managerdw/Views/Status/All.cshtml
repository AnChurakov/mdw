@model IEnumerable<managerdw.Models.Status>
@{
    ViewBag.Title = "Все добавленные статусы";
    Layout = "~/Views/Shared/_PanelControl.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">


                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Название статуса</th>
                                <th>Удаление</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var status in Model)
                            {
                            <tr>
                                @if (status.Name == "Просрочен")
                                {
                                    <td><span class="label label-rounded label-danger">@status.Name</span></td>
                                }
                                @if (status.Name == "Приостановлен")
                                {
                                    <td><span class="label label-rounded label-warning">@status.Name</span></td>
                                }
                                @if (status.Name == "Активный")
                                {
                                    <td><span class="label label-rounded label-success">@status.Name</span></td>
                                }
                                <td>@Html.ActionLink("Удалить", "Delete", "Status", new { id = status.Id }, new { @class = "btn btn-danger btn-rounded btn-sm" })</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>




